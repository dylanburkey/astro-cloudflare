---
interface Props {
  sectionSlug: string;
  presetSlug?: string;
  height?: string;
  showControls?: boolean;
  class?: string;
}

const {
  sectionSlug,
  presetSlug,
  height = '400px',
  showControls = true,
  class: className = '',
} = Astro.props;

const previewUrl = `/api/render/section?section=${encodeURIComponent(sectionSlug)}${presetSlug ? `&preset=${encodeURIComponent(presetSlug)}` : ''}`;
---

<div
  class:list={['liquid-preview-container', className]}
  data-section={sectionSlug}
  data-preset={presetSlug || ''}
>
  {showControls && (
    <div class="preview-controls">
      <div class="preview-controls__left">
        <span class="preview-label">{sectionSlug}</span>
      </div>
      <div class="preview-controls__right">
        <div class="viewport-controls">
          <button
            type="button"
            class="viewport-btn active"
            data-viewport="desktop"
            title="Desktop view"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="3" width="20" height="14" rx="2" />
              <line x1="8" y1="21" x2="16" y2="21" />
              <line x1="12" y1="17" x2="12" y2="21" />
            </svg>
          </button>
          <button
            type="button"
            class="viewport-btn"
            data-viewport="tablet"
            title="Tablet view"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="4" y="2" width="16" height="20" rx="2" />
              <line x1="12" y1="18" x2="12" y2="18" />
            </svg>
          </button>
          <button
            type="button"
            class="viewport-btn"
            data-viewport="mobile"
            title="Mobile view"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="5" y="2" width="14" height="20" rx="2" />
              <line x1="12" y1="18" x2="12" y2="18" />
            </svg>
          </button>
        </div>
        <button type="button" class="refresh-btn" title="Refresh preview">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="23 4 23 10 17 10" />
            <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10" />
          </svg>
        </button>
      </div>
    </div>
  )}

  <div class="preview-frame-wrapper" style={`height: ${height}`}>
    <div class="preview-loading">
      <div class="skeleton-container">
        <div class="skeleton skeleton-header"></div>
        <div class="skeleton skeleton-text"></div>
        <div class="skeleton skeleton-text skeleton-text--short"></div>
        <div class="skeleton skeleton-button"></div>
      </div>
      <span class="loading-text">Loading preview...</span>
    </div>

    <iframe
      class="preview-iframe hidden"
      sandbox="allow-same-origin allow-scripts"
      loading="lazy"
      data-src={previewUrl}
      title={`Preview of ${sectionSlug}`}
    ></iframe>

    <div class="preview-error hidden">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <circle cx="12" cy="12" r="10" />
        <line x1="12" y1="8" x2="12" y2="12" />
        <line x1="12" y1="16" x2="12.01" y2="16" />
      </svg>
      <p class="error-message">Failed to load preview</p>
      <button type="button" class="retry-btn">Try Again</button>
    </div>
  </div>

  <div class="preview-footer">
    <span class="render-stats"></span>
  </div>
</div>

<script>
  class LiquidPreviewController {
    private container: HTMLElement;
    private iframe: HTMLIFrameElement;
    private loadingEl: HTMLElement;
    private errorEl: HTMLElement;
    private statsEl: HTMLElement;
    private sectionSlug: string;
    private presetSlug: string | null;

    constructor(container: HTMLElement) {
      this.container = container;
      this.sectionSlug = container.dataset.section || '';
      this.presetSlug = container.dataset.preset || null;
      this.iframe = container.querySelector('.preview-iframe') as HTMLIFrameElement;
      this.loadingEl = container.querySelector('.preview-loading') as HTMLElement;
      this.errorEl = container.querySelector('.preview-error') as HTMLElement;
      this.statsEl = container.querySelector('.render-stats') as HTMLElement;

      this.init();
    }

    private init() {
      // Lazy load on intersection
      const observer = new IntersectionObserver(
        (entries) => {
          if (entries[0].isIntersecting) {
            this.loadPreview();
            observer.disconnect();
          }
        },
        { threshold: 0.1 }
      );
      observer.observe(this.container);

      this.bindControls();
    }

    private bindControls() {
      // Viewport controls
      const viewportBtns = this.container.querySelectorAll('[data-viewport]');
      viewportBtns.forEach((btn) => {
        btn.addEventListener('click', () => {
          const viewport = (btn as HTMLElement).dataset.viewport!;
          this.setViewport(viewport);
          viewportBtns.forEach((b) => b.classList.remove('active'));
          btn.classList.add('active');
        });
      });

      // Refresh button
      const refreshBtn = this.container.querySelector('.refresh-btn');
      refreshBtn?.addEventListener('click', () => this.loadPreview(true));

      // Retry button
      const retryBtn = this.container.querySelector('.retry-btn');
      retryBtn?.addEventListener('click', () => this.loadPreview(true));
    }

    async loadPreview(skipCache = false) {
      this.showLoading();

      try {
        const response = await fetch('/api/render/section', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            sectionSlug: this.sectionSlug,
            presetSlug: this.presetSlug,
            skipCache,
          }),
        });

        if (!response.ok) {
          throw new Error(`HTTP ${response.status}`);
        }

        const data = await response.json();

        if (!data.success || data.errors?.length > 0) {
          throw new Error(data.errors?.[0] || data.error || 'Render failed');
        }

        this.renderToIframe(data.html, data.css);
        this.updateStats(data.renderTimeMs, data.cached);
        this.showContent();
      } catch (error) {
        const message = error instanceof Error ? error.message : 'Unknown error';
        this.showError(message);
      }
    }

    private renderToIframe(html: string, css: string) {
      const doc = this.iframe.contentDocument!;
      doc.open();
      doc.write(`<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    * { box-sizing: border-box; }
    body { margin: 0; font-family: system-ui, -apple-system, sans-serif; }
    ${css}
  </style>
</head>
<body>${html}</body>
</html>`);
      doc.close();
    }

    private setViewport(viewport: string) {
      this.iframe.classList.remove('viewport-desktop', 'viewport-tablet', 'viewport-mobile');
      this.iframe.classList.add(`viewport-${viewport}`);
    }

    private updateStats(renderTimeMs: number, cached: boolean) {
      this.statsEl.textContent = `${renderTimeMs}ms${cached ? ' (cached)' : ''}`;
    }

    private showLoading() {
      this.loadingEl.classList.remove('hidden');
      this.iframe.classList.add('hidden');
      this.errorEl.classList.add('hidden');
    }

    private showContent() {
      this.loadingEl.classList.add('hidden');
      this.iframe.classList.remove('hidden');
      this.errorEl.classList.add('hidden');
    }

    private showError(message: string) {
      this.loadingEl.classList.add('hidden');
      this.iframe.classList.add('hidden');
      this.errorEl.classList.remove('hidden');
      const msgEl = this.errorEl.querySelector('.error-message');
      if (msgEl) msgEl.textContent = message;
    }
  }

  // Initialize all preview containers
  document.querySelectorAll('.liquid-preview-container').forEach((container) => {
    new LiquidPreviewController(container as HTMLElement);
  });
</script>

<style>
  .liquid-preview-container {
    border: 1px solid #e2e8f0;
    border-radius: 0.75rem;
    overflow: hidden;
    background: #ffffff;
  }

  .preview-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #e2e8f0;
    background: #f8fafc;
  }

  .preview-controls__left {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .preview-controls__right {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .preview-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: #64748b;
  }

  .viewport-controls {
    display: flex;
    gap: 0.25rem;
    padding: 0.25rem;
    background: #e2e8f0;
    border-radius: 0.375rem;
  }

  .viewport-btn {
    padding: 0.375rem;
    background: transparent;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    color: #64748b;
    transition: all 0.15s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .viewport-btn:hover {
    color: #1e293b;
  }

  .viewport-btn.active {
    background: #ffffff;
    color: #2563eb;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  .refresh-btn {
    padding: 0.5rem;
    background: transparent;
    border: 1px solid #e2e8f0;
    border-radius: 0.375rem;
    cursor: pointer;
    color: #64748b;
    transition: all 0.15s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .refresh-btn:hover {
    background: #f1f5f9;
    color: #1e293b;
  }

  .preview-frame-wrapper {
    position: relative;
    background: #ffffff;
    overflow: hidden;
  }

  .preview-iframe {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
    transition: width 0.3s ease;
    margin: 0 auto;
  }

  .preview-iframe.viewport-tablet {
    width: 768px;
    max-width: 100%;
  }

  .preview-iframe.viewport-mobile {
    width: 375px;
    max-width: 100%;
  }

  .preview-loading,
  .preview-error {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #f8fafc;
  }

  .skeleton-container {
    width: 80%;
    max-width: 400px;
    margin-bottom: 1rem;
  }

  .skeleton {
    background: linear-gradient(90deg, #e2e8f0 25%, #f1f5f9 50%, #e2e8f0 75%);
    background-size: 200% 100%;
    animation: skeleton-pulse 1.5s ease-in-out infinite;
    border-radius: 0.25rem;
  }

  .skeleton-header {
    height: 2rem;
    margin-bottom: 1rem;
    width: 60%;
  }

  .skeleton-text {
    height: 1rem;
    margin-bottom: 0.5rem;
  }

  .skeleton-text--short {
    width: 40%;
  }

  .skeleton-button {
    height: 2.5rem;
    width: 8rem;
    margin-top: 1rem;
  }

  @keyframes skeleton-pulse {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }

  .loading-text {
    font-size: 0.875rem;
    color: #94a3b8;
  }

  .preview-error {
    color: #64748b;
    text-align: center;
  }

  .preview-error svg {
    margin-bottom: 1rem;
    color: #f87171;
  }

  .error-message {
    margin: 0 0 1rem;
    font-size: 0.875rem;
  }

  .retry-btn {
    padding: 0.5rem 1rem;
    background: #2563eb;
    color: #ffffff;
    border: none;
    border-radius: 0.375rem;
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: 500;
    transition: background 0.15s;
  }

  .retry-btn:hover {
    background: #1d4ed8;
  }

  .preview-footer {
    padding: 0.5rem 1rem;
    border-top: 1px solid #e2e8f0;
    background: #f8fafc;
    font-size: 0.75rem;
    color: #94a3b8;
    text-align: right;
  }

  .hidden {
    display: none;
  }
</style>
