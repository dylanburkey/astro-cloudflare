---
import Dashboard from '../../../layouts/Dashboard.astro';
import PresetEditor from '../../../components/presets/PresetEditor.astro';
---

<Dashboard title="Create Preset" activeNav="presets">
  <div class="mb-6">
    <a href="/library/presets" class="inline-flex items-center gap-1 text-sm text-gray-500 hover:text-gray-700 mb-4">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Presets
    </a>

    <h1 class="text-2xl font-bold text-gray-900 mb-2">Create Custom Preset</h1>
    <p class="text-gray-600">Create a new color and typography preset for your themes.</p>
  </div>

  <PresetEditor mode="create" />
</Dashboard>
