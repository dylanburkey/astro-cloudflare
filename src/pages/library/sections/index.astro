---
import Dashboard from '../../../layouts/Dashboard.astro';
import { getCollection } from 'astro:content';
import { getAllVariants } from '../../../lib/project/get-all-variants';

const sections = await getCollection('sections');
const variantsMap = await getAllVariants(Astro.locals);

// Group sections by category (excluding variants from main list)
const categories = sections.reduce((acc, section) => {
  const cat = section.data.category;
  if (!acc[cat]) acc[cat] = [];
  acc[cat].push(section);
  return acc;
}, {} as Record<string, typeof sections>);

// Count total variants
const totalVariants = Object.values(variantsMap).reduce((sum, variants) => sum + variants.length, 0);
---

<Dashboard title="Sections" activeNav="sections">
  <div class="mb-6">
    <a href="/library" class="inline-flex items-center gap-1 text-sm text-gray-500 hover:text-gray-700 mb-4">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Library
    </a>
    <div class="flex items-center justify-between">
      <p class="text-gray-600">Reusable section components for Shopify themes.</p>
      {totalVariants > 0 && (
        <span class="text-sm text-purple-600 bg-purple-50 px-3 py-1 rounded-full">
          {totalVariants} variant{totalVariants !== 1 ? 's' : ''} saved
        </span>
      )}
    </div>
  </div>

  <div class="space-y-8">
    {Object.entries(categories).map(([category, items]) => (
      <div>
        <h2 class="text-lg font-semibold text-gray-900 capitalize mb-4">{category}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {items.map((section) => {
            const variants = variantsMap[section.data.slug] || [];
            return (
              <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <a href={`/library/sections/${section.data.slug}`} class="block group hover:bg-gray-50 transition-colors">
                  <div class="h-32 bg-gradient-to-br from-purple-50 to-purple-100 flex items-center justify-center">
                    <svg class="w-12 h-12 text-purple-300 group-hover:text-purple-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6z" />
                    </svg>
                  </div>
                  <div class="p-4">
                    <div class="flex items-center gap-2 mb-1">
                      <h3 class="font-semibold text-gray-900 group-hover:text-emerald-600 transition-colors">{section.data.name}</h3>
                      {variants.length > 0 && (
                        <span class="text-xs bg-purple-100 text-purple-600 px-2 py-0.5 rounded-full">
                          {variants.length} variant{variants.length !== 1 ? 's' : ''}
                        </span>
                      )}
                    </div>
                    <p class="text-sm text-gray-500 line-clamp-2 mb-3">{section.data.description || 'No description'}</p>
                    <div class="flex items-center gap-2 text-xs text-gray-400">
                      <span>{section.data.settings.length} settings</span>
                      {section.data.blocks.length > 0 && (
                        <>
                          <span>Â·</span>
                          <span>{section.data.blocks.length} block types</span>
                        </>
                      )}
                    </div>
                  </div>
                </a>

                {/* Variants Section */}
                {variants.length > 0 && (
                  <div class="border-t border-gray-100">
                    <div class="px-4 py-2 bg-gray-50">
                      <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Variants</p>
                    </div>
                    <div class="divide-y divide-gray-100">
                      {variants.map((variant) => (
                        <a
                          href={`/library/sections/${variant.slug}`}
                          class="flex items-center gap-2 px-4 py-2 hover:bg-purple-50 transition-colors group"
                        >
                          <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                          </svg>
                          <span class="text-sm text-gray-700 group-hover:text-purple-700">{variant.name}</span>
                        </a>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            );
          })}
        </div>
      </div>
    ))}
  </div>
</Dashboard>
